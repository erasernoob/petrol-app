{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$HOME/**/*" }]
    },


    "core:default",
    "opener:default",
    "dialog:default",
    "fs:write-all",
    "fs:write-files",
    "fs:allow-write",
    "fs:allow-write-text-file",
    "shell:default"
  ]
}