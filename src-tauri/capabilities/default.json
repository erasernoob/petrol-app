{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:write-files",
      "allow": [
        {
          "path": "$DOWNLOAD/*"
        }
      ]
    },

    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    "shell:default"
  ]
}